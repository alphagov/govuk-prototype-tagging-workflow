
<%# blocks for govuk_admin_template %>
<% content_for :page_title do %>GOV.UK admin prototype<% end %>

<% content_for :content do %>

<div class="row">
  <section class="col-md-8">
    <h1>Create detailed guide</h1>

    <div class="format-advice">
      <p><strong>Use this format for:</strong> Guidance for professional or specialist users so that they can complete a defined task.</p>
    </div>

    <div class="tabbable">
      <ul class="nav nav-tabs add-bottom-margin">
        <li><a href="/">Document</a></li>
        <li class="active"><a href="/tagging">Tagging</a></li>
      </ul>

      <div class="tab-content">
        <form class="edition-form js-edition-form" id="new_edition" enctype="multipart/form-data" action="/government/admin/detailed-guides" accept-charset="UTF-8" method="post">

          <fieldset>
            <label for="edition_policy_content_ids">Policies</label>
            <input name="edition[policy_content_ids][]" type="hidden" value="" />
            <select multiple="multiple" class="chzn-select form-control" data-placeholder="Choose policies…" name="edition[policy_content_ids][]" id="edition_policy_content_ids">
              <option value=""></option>

              <% @policies.each do |pol| %>
              <option value="<%= pol['slug'] %>"><%= pol['title'] %></option>
              <% end %>
            </select>

            <label class="required" for="edition_topic_ids">Policy Areas (this is the new name for Topics)<span>*</span></label>
            <input name="edition[topic_ids][]" type="hidden" value="" />
            <select multiple="multiple" class="chzn-select form-control" data-placeholder="Choose topics…" name="edition[topic_ids][]" id="edition_topic_ids">
              <option value="43">Arts and culture</option>
            </select>
          </fieldset>

          <fieldset>
            <legend>Topics &amp; Subtopics</legend>

            <p>
              Tag this item if you want it to appear on a <a href="https://insidegovuk.blog.gov.uk/2015/03/16/taking-stock-of-gov-uks-information-architecture/">subtopic page</a>. Items tagged to a <a href="#">curated subtopic</a> will not appear automatically - tag, publish, then contact GDS to have this item added to a curated subtopic.
            </p>

            <div class="panel panel-default tag-explorer">
              <div class="panel-heading">Topics &amp; subtopics</div>

              <div class="tag-container">
                <div class="list-group tag-explorer-topics-level-1">
                  <% @topics.each do |topic| %>
                    <a href="#<%= topic['base_path'].parameterize %>" class="list-group-item"><%= topic['title'] %></a>
                  <% end %>
                </div>
              </div>

              <div class="tag-container">
                <% @topics.each do |topic| %>
                  <div class="list-group tag-explorer-topics-level-2 js-hidden" id="<%= topic['base_path'].parameterize %>">
                    <% topic['links']['children'].each do |subtopic| %>
                      <a href="<%= subtopic['base_path'].parameterize %>" class="list-group-item"><%= subtopic['title'] %></a>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>

            <label for="chosen-subtopics">Selected topics &amp; subtopics</label>

            <select multiple="multiple" class="chzn-select form-control" data-placeholder="No subtopics currently chosen" name="edition[primary_specialist_sector_tag]" id="chosen-subtopics">
              <option value=""></option>
              <% @topics.each do |topic| %>
              <optgroup label="<%= topic['title'] %>">
                <% topic['links']['children'].each do |subtopic| %>
                <option value="<%= subtopic['base_path'].parameterize %>"><%= subtopic['title'] %></option>
                <% end %>
              </optgroup>
              <% end %>
            </select>

          </fieldset>


          <div class="publishing-controls well">
            <div class="form-actions">
              <a href="#" class="btn btn-primary btn-lg">Save</a>
              <a href="#" class="btn btn-primary btn-lg">Save and continue</a>

              <span class="or_cancel"> or <a href="#">cancel</a></span>
            </div>
          </div>
        </form>
      </div>
    </div>
  </section>
</div>

<% end %>


<%= render :template => 'layouts/govuk_admin_template' %>
