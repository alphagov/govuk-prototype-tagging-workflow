<fieldset>
  <legend>Scheduled publication</legend>
  <input type="hidden" name="scheduled_publication_active" id="" value="0" />
  <div class="checkbox">
    <label class="checkbox show-hide" for="scheduled_publication_active" data-target="scheduled-publication-date">
      <input type="checkbox" name="scheduled_publication_active" id="scheduled_publication_active" value="1"
      /> Schedule for publication
    </label>
  </div>

  <div class="scheduled_publication js-hidden" id="scheduled-publication-date">
    <div class="form-inline form-date">
      <div class="form-group form-group-day">
        <label for="scheduled-publication-day">Day</label>
        <input type="text" name="scheduled-publication-day" id="scheduled-publication-day" class="form-control" value="<%= Date.current.day %>">
      </div>

      <div class="form-group form-group-month">
        <label for="scheduled-publication-month">Month</label>
        <input type="text" name="scheduled-publication-month" id="scheduled-publication-month" class="form-control" value="<%= Date.current.month %>">
      </div>

      <div class="form-group form-group-year form-group-spacer">
        <label for="scheduled-publication-year">Year</label>
        <input type="text" name="scheduled-publication-year" id="scheduled-publication-year" class="form-control" value="<%= Date.current.year %>">
      </div>

      <div class="form-group form-group-hour">
        <label for="scheduled-publication-hour">Hour</label>
        <input type="text" name="scheduled-publication-hour" id="scheduled-publication-hour" class="form-control" value="<%= Time.now.hour %>">
      </div>

      <div class="form-group form-group-minute">
        <label for="scheduled-publication-minute">Minute</label>
        <input type="text" name="scheduled-publication-minute" id="scheduled-publication-minute" class="form-control" value="<%= Time.now.min %>">
      </div>
    </div>
  </div>
</fieldset>