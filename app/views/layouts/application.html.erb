<% environment_style = GovukAdminTemplate.environment_style %>
<% environment_label = GovukAdminTemplate.environment_label %>

<% content_for :app_title do %>GOV.UK admin prototype<% end %>
<% content_for :app_home_path, govuk_admin_template_engine_path %>

<% content_for :head do %>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "admin" %>
  <%= javascript_include_tag "elements" %>
  <%= javascript_include_tag "prototype" %>
  <script>
  $(function() {
    GOVUK.init(GOVUK.adminGlobalInitialiser);
  });
  </script>
<% end %>

<% content_for :navbar do %>
  <%= render partial: 'partials/header', locals: { environment_style: environment_style, environment_label: environment_label } %>
<% end %>

<%# use the govuk_admin_template layout %>
<%= render :template => 'layouts/govuk_admin_template' %>

